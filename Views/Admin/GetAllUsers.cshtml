@*model List<Product_Management.Models.DomainModels.Product>*@
@model List<Product_Management.Models.DomainModels.UserModel>
<partial name="_Notification" />

<div class="container-fluid px-4 small">
    <div class="row">
        <div class="col-6">
            <h4 class="mb-4">PRODUCT LIST</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Authentication" asp-action="Register">
                <i class="bi bi-plus-circle"></i>
                ADD NEW USER
            </a>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                @if (Model.Count == 0)
                {
                    <h1 class="text-center">NO PRODUCT ADDED AS OF NOW!</h1>
                }
                else
                {
                    <table id="myTable" class="table cell-border">
                        <thead>
                            <tr>
                                <th scope="col">User Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone no.</th>
                                <th scope="col">Address</th>
                                <th scope="col">Password</th>
                                <th scope="col">IsActive</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Address</td>
                                    <td>@user.Password</td>
                                    <td>@user.IsActive</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (user.IsActive)
                                            {
                                                <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn small btn-sm btn-warning mx-2">
                                                    <i class="bi bi-pencil-square"></i> Update
                                                </a>
                                                <a asp-action="Deactive" asp-route-id="@user.Id" class="btn small btn-sm btn-danger deactive-btn">
                                                    <i class="bi bi-trash-fill"></i> Deactive
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Product" asp-action="Update" asp-route-id="@user.Id" class="btn disabled small btn-sm btn-warning mx-2" style="cursor:not-allowed !important;">
                                                    <i class="bi bi-pencil-square"></i> Update
                                                </a>
                                                <a asp-controller="Product" asp-action="Active" asp-route-id="@user.Id" class="btn small btn-sm btn-success">
                                                    <i class="bi bi-check-circle-fill"></i> Active
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ProductTable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add click event to the "Deactive" button
            $('.deactive-btn').on('click', function (e) {
                e.preventDefault();

                // Get the product ID from the button's data-id attribute
                var productId = $(this).data('id');

                // Show SweetAlert2 confirmation dialog
                Swal.fire({
                    title: "Are you sure?",
                    text: "You can revert this in Future!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Deactivate it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Perform the deactivation action
                        window.location.href = $(this).attr('href');
                    }
                });
            });
        });
    </script>
}