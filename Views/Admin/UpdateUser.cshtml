@model Product_Management.Models.DomainModels.UserModel;
@{
    ViewData["Title"] = "Update User";
}
<partial name="_Notification" />
<div class="container-fluid px-4 mb-5">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">UPDATE USER</h4>
                <form method="post" asp-action="UpdateUser">
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput"
                               placeholder="User Name" readonly>
                        <label asp-for="Email">User Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" type="text" class="form-control" id="floatingInput" required
                               placeholder="User Name">
                        <label asp-for="Name">User Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="text" class="form-control" id="floatingInput" required
                               placeholder="User Password">
                        <label asp-for="Password">User Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" type="text" class="form-control" id="floatingInput" required
                               placeholder="User Phone">
                        <label asp-for="Phone">User Phone</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Address" type="text" class="form-control" id="floatingInput" required
                               placeholder="User Address">
                        <label asp-for="Address">User Address</label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    
                    <div>
                        <button class="btn btn-warning btn-sm" type="submit">
                            <i class="bi bi-pencil-square"></i>
                            Update
                        </button>
                        <a asp-controller="Admin" asp-action="GetAllUsers" class="btn btn-danger btn-sm float-end" type="submit">
                            <i class="bi bi-x-circle"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}